#!/bin/bash

PKGROOT=$(pwd)

set -v

cd upstream
cd mesa\_master

grep LIBGL_DRIVERS_PATH /etc/profile >/dev/null || printf "export LIBGL_DRIVERS_PATH='/opt/lib/aarch64-linux-gnueabihf/dri/:/usr/lib/aarch64-linux-gnueabihf/dri'" >> /etc/profile

touch /etc/ld.so.conf.d/optlibs.conf
echo "/opt/lib/arm-linux-gnueabihf" > /etc/ld.so.conf.d/optlibs.conf

ninja -C pbp-build install

rm -rf pbp-build

ldconfig
