#!/bin/bash

PKGROOT=$(pwd)

set -v

cd upstream
cd mesa\_20.2

grep LIBGL_DRIVERS_PATH /etc/profile >/dev/null || printf "export LIBGL_DRIVERS_PATH='/opt/lib/arm-linux-gnueabihf/dri/:/usr/lib/arm-linux-gnueabihf/dri'" >> /etc/profile

echo "/opt/lib/arm-linux-gnueabihf" > /etc/ld.conf.d/optlibs.conf

ninja -C pbp-build install

ldconfig
